<h2>Запись на занятие</h2>
<%# <%= @db_result_teacher %> 
<script type="text/javascript">
  $(function()) {
    $('select[name="color_jqvery"]').simplecolorpicker();
    // jQuery('#datetimepicker').datetimepicker();
  };
</script>
<form action="/appointment" method="post">
  <div class="mb-3">
    <label class="form-label">Ваше имя</label>
    <input type="text" name="user_name" class="form-control" placeholder="Введите ваше имя" value="<%= @user_name %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Телефон</label>
    <input type="text" name="user_phone" class="form-control" placeholder="Введите ваш номер телефона" value="<%= @user_phone %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Время записиe</label>
    <input id="datetimepicker" type="text" name="date_time" class="form-control" placeholder="Введите время посещения" value="<%= @date_time %>">
  </div>
  <br>
  <select class="form-select" aria-label="Default select example" name="select_teacher">
    <option selected>Выберите учителя</option>
    <option value="Valentina Ivanovna" <%= @select_teacher == 'Валентина Иванова' ? 'selected' : '' %>>Валентина Иванова</option> 
    <option value="Sergei Mikhailovich" <%= @select_teacher == 'Сергей Михайлович' ? 'selected' : '' %>>Сергей Михайлович</option> 
    <option value="Alina Sergeyevna" <%= @select_teacher == 'Алина Сергеевна' ? 'selected' : '' %>>Алина Сергеевна</option> 
  </select>
  <br>
  <br>
  <div class="mb-3" >
    <label class="form-label">Выверите цвет:</label>
    <select name="color_jquery">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>
  <br>
  <button type="submit" class="btn btn-primary">Записаться</button>
</form>
  


